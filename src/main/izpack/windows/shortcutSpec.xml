<shortcuts> 
   <programGroup defaultName="MultiDoge" location="applications"/> 
   <shortcut name="MultiDoge ${project.version}" 
             target="$INSTALL_PATH/multidoge.exe" 
             description="MultiDoge" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multidoge.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiDoge ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiDoge" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>